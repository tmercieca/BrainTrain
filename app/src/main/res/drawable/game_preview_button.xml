<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<!--rectangle with circular edges-->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">


            <size
                android:width="100dp"
                android:height="400dp"/>
            <stroke
                android:width="2dp"
                android:color="#cc846a"
                />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <solid android:color="#14307c"/>

        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">

            <size
                android:width="100dp"
                android:height="180dp"/>
            <stroke
                android:width="2dp"
                android:color="#FFD7CCC8"
                />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <solid android:color="#2962ff"/>

        </shape>
    </item>

</selector>



